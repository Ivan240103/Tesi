{
  "name": "Dashboard-devcontainer",
  "dockerComposeFile": ["../../docker-compose.yaml"],
  "service": "dev",
  "workspaceFolder": "/workspace/iam-dashboard",
  "postCreateCommand": "npm install",
  "features": {
    "git": "os-provided"
  },
  "customizations": {
    "vscode": {
      "settings": {
        "remote.autoForwardPorts": false,
        "extensions.verifySignature": false // need for macOS users https://github.com/microsoft/vscode-remote-release/issues/8169
      },
      "extensions": [
        "wayou.vscode-todo-highligh",
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "msjsdiag.vscode-react-native",
        "ms-vscode.vscode-typescript-next",
        "GitHub.vscode-github-actions",
        "streetsidesoftware.code-spell-checker",
        "SonarSource.sonarlint-vscode"
      ]
    }
  },
  "shutdownAction": "none"
}
